{% extends 'back.html.twig' %}
{% block title %} Espace Admin - Accueil {% endblock %}
{% block css %}

{% endblock %}
{% block content %}
    <div class="animated fadeIn">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Credit Card</strong>
                        </div>
                        <div class="card-body">
                            <div id="pay-invoice">
                                <div class="card-body">
                                    <div class="card-title">
                                        <h3 class="text-center">Ajouter Velo</h3>
                                    </div>
                                    <hr>
                                    <form action="" method="POST">
                                        <div class="form-group">
                                            <label for="nom" class="control-label mb-1"> Nom Vélo </label>
                                            <input id="nom" name="nom" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                        </div>
                                        <div class="form-group">
                                            <label for="debutservice" class="control-label mb-1">Date Debut de service</label>
                                            <input id="debutservice" name="debutservice" type="date" class="form-control" aria-required="true" aria-invalid="false" value="">
                                        </div>
                                        <div class="form-group">
                                            <label for="type" class="control-label mb-1">Type</label>
                                            <input id="type" name="type" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                        </div>
                                        <div class="form-group">
                                            <label for="disponible" class="control-label mb-1">Disponibilité</label>
                                            <input id="disponible" name="disponible" type="boolean" class="form-control" aria-required="true" aria-invalid="false" value="">
                                        </div>
                                        <div class="form-group">
                                            <label for="prix" class="control-label mb-1">Prix</label>
                                            <input id="prix" name="prix" type="integer" class="form-control" aria-required="true" aria-invalid="false" value="">
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="selectSm" class=" form-control-label">Zone</label></div>
                                            <div class="col-12 col-md-9">
                                                <select name="zone" id="selectSm" class="form-control-sm form-control">
                                                    {% for zone in zones %}
                                                        <option value="{{ zone.id }}">{{ zone.nom }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div>
                                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                                <span id="payment-button-amount">Ajouter Velo</span>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}

{% endblock %}